<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 플리마켓은!?"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/figure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/figure_fleamarket"
                />
            <ImageView
                android:id="@+id/frand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frand_market"
                />
            <ImageView
                android:id="@+id/letsrun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/letsrun_fleamarket"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

